<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_movie_cast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/movie_cast_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_movie_cast_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_cast_moviedetail"
        android:textAlignment="center"
        android:fontFamily="@font/netflixsans_light"
        android:textColor="@color/white"
        android:maxLines="3"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_movie_cast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>